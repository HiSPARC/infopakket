has_inner_box 1
inner_pos "t"
use_parbox 0
use_makebox 0
width "100col%"
special "none"
height "1in"
height_special "totalheight"
status open

\begin_layout Paragraph
Opdracht 1:
\end_layout

\begin_layout Plain Layout

\shape italic
Bepaal hoever de GPS antenne van het te meten station boven de WGS 84 ellipsoïde
 ligt en hoever dit boven NAP is.
\end_layout

